<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Trivia Challenge</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    :root {
      --vibrant-1: #ff6b6b; /* coral */
      --vibrant-2: #f7b500; /* bright amber */
      --vibrant-3: #7c5cff; /* electric purple */
      --accent-contrast: #ffffff;
      --response-bg: #fff7f8;
    }

    body {
      position: relative;
      overflow-x: hidden;
      color: #1f2430;
      background: 
        linear-gradient(180deg, rgba(124,92,255,0.05) 0%, rgba(255,107,107,0.03) 38%, rgba(247,181,0,0.02) 100%),
        radial-gradient(circle at 12% 18%, rgba(124,92,255,0.14), transparent 18%),
        radial-gradient(circle at 92% 82%, rgba(255,107,107,0.12), transparent 20%);
      background-blend-mode: screen, screen, normal;
    }

    body::before,
    body::after {
      content: "";
      position: fixed;
      z-index: -1;
      pointer-events: none;
      filter: blur(80px) saturate(120%);
    }

    body::before {
      left: -10%;
      top: -8%;
      width: 62vw;
      height: 62vh;
      background: radial-gradient(circle at 15% 30%, rgba(124,92,255,0.84), rgba(124,92,255,0.38) 38%, transparent 60%);
    }

    body::after {
      right: -8%;
      bottom: -12%;
      width: 52vw;
      height: 52vh;
      background: radial-gradient(circle at 80% 72%, rgba(255,107,107,0.86), rgba(247,181,0,0.48) 38%, transparent 66%);
    }

    .card-theme {
      background: linear-gradient(180deg, rgba(255,255,255,0.995) 0%, rgba(255,255,255,0.98) 100%);
      border: 0;
      box-shadow: 0 10px 28px rgba(35, 39, 63, 0.06);
      z-index: 1;
    }

    .btn-theme {
      background: linear-gradient(90deg, var(--vibrant-3), var(--vibrant-1));
      color: var(--accent-contrast);
      border: none;
    }

    .btn-theme:hover {
      opacity: 0.9;
    }

    .score-display {
      background: linear-gradient(90deg, var(--vibrant-3), rgba(124,92,255,0.85));
      color: var(--accent-contrast);
      font-size: 0.9rem;
    }

    .score-display strong {
      color: rgba(255,255,255,0.95);
      margin-right: 6px;
    }

    .score-display--score {
      background: linear-gradient(90deg, var(--vibrant-1), rgba(255,107,107,0.9));
    }

    .question-title {
      color: var(--vibrant-2);
    }

    .response-card {
      border-left: 6px solid var(--vibrant-2);
      background: linear-gradient(90deg, #ffffff, var(--response-bg));
    }
  </style>
</head>

<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 col-lg-8">
        <div class="card card-theme shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <div class="score-display px-3 py-2 rounded-pill">
                <strong>Completed:</strong>
                <span id="questionNumber">0</span>
              </div>

              <h1 class="card-title text-center flex-grow-1 question-title mb-0">
                Answer this Trivia Question!
              </h1>

              <div class="score-display score-display--score px-3 py-2 rounded-pill">
                <strong>Score:</strong>
                <span id="userScore">0</span>
              </div>
            </div>

            <% if (!question) { %>
              <div class="text-center mb-4">
                <form action="/question" method="GET">
                  <button type="submit" class="btn btn-theme btn-lg">Get a Question</button>
                </form>
              </div>
            <% } else { %>
              <form action="/answer" method="POST" class="row g-2 align-items-center mb-4">
                <div class="col-12">
                  <h3 class="text-center mb-3" style="color: var(--vibrant-3)">
                    <%= question %>
                  </h3>
                </div>

                <div class="col-12 col-md-9">
                  <input
                    type="text"
                    name="answer"
                    class="form-control form-control-lg"
                    placeholder="Type your answer here..."
                    value="<%= answer || '' %>"
                    <%= answer ? 'disabled' : '' %>
                    required
                  />
                </div>

                <div class="col-12 col-md-3 d-grid">
                  <button
                    type="submit"
                    class="btn btn-theme btn-lg"
                    <%= answer ? 'disabled' : '' %>>
                    Submit Answer
                  </button>
                </div>
              </form>
            <% } %>

            <% if (answer) { %>
              <div class="mt-4">
                <div class="card response-card">
                  <div class="card-body">
                    <h5 class="card-title d-flex align-items-center gap-2">
                      <% if (typeof correct !== 'undefined') { %>
                        <span class="badge <%= correct ? 'bg-success' : 'bg-danger' %> me-2">
                          <%= correct ? 'Correct!' : 'Incorrect' %>
                        </span>
                      <% } %>
                      The Answer was:
                    </h5>

                    <p class="card-text mb-2"><%= answer %></p>

                    <% if (userAnswer) { %>
                      <p class="text-muted mt-2">
                        Your answer: <%= userAnswer %>
                      </p>
                    <% } %>

                    <form action="/question" method="GET" class="mt-3">
                      <button type="submit" class="btn btn-theme btn-sm">
                        Next Question
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Updating the scores and questions with this function
    async function updateStats() {
      try {
        const response = await fetch('/score');
        const data = await response.json();
        document.getElementById('userScore').textContent = data.score;
        document.getElementById('questionNumber').textContent = data.questionsAnswered;
      } catch (error) {
        console.error('Error fetching stats:', error);
      }
    }

    // Initial update + periodic refresh
    updateStats();
    setInterval(updateStats, 5000);
  </script>
</body>
</html>